      <!-- modal for edit product -->

      <div class="modal fade" id="varient" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
      aria-labelledby="addCategoriesLabel" aria-hidden="true">
      <div style="max-width: 600px;" class="modal-dialog modal-dialog-centered modal-md"> <!-- Added modal-lg class for large width -->
          <div class="modal-content">
              <form id="edit_product_form" onsubmit="editCoupons()">
                  <div class="modal-header">
                     <p style="font-weight: bold;">Edit Coupon</p>
                 
                  </div>
 
                  <div class="modal-body">

                    <div class="row clearfix">


                        <input type="hidden" id="couponId">

                        <div  class="col-sm-12">
                            <!-- <label for="pdescription">Description *</label> -->
                            <input id="code" placeholder="Coupon Code" type="text"
                            required autocomplete="off">
                            <span style="position: absolute; top: 10px; right: 22px;" id="error_code" data-bs-dismiss="modal"
                            class="material-symbols-outlined error_">
                        </span>
                     </div>

                     <div  class="col-sm-12">
                        <!-- <label for="pdescription">Description *</label> -->
                        <input id="discription" placeholder="Description" type="text"
                        required autocomplete="off">
                        <span style="position: absolute; top: 10px; right: 22px;" id="error_discription" data-bs-dismiss="modal"
                        class="material-symbols-outlined error1_">
                    </span>
                    </div>

                    <div  class="col-sm-12">
                        <!-- <label for="pdescription">Description *</label> -->
                        <input id="discount" placeholder="Discount percentage %" pattern="^(100|[1-9][0-9]?)$" title="Please enter positive numbers (excluding zero and maximun 100)" type="text"
                        required autocomplete="off">
                        <span style="position: absolute; top: 10px; right: 22px;" id="error_add_title" data-bs-dismiss="modal"
                        class="material-symbols-outlined error1_">
                    </span>
                    </div>

                    

                            <div class="col-sm-6">
                                     
                                    <input id="min_amount" pattern="[1-9][0-9]*" title="Please enter positive numbers (excluding zero)"  placeholder="Min Purchase Amount" type="text"
                                    required autocomplete="off">
                                    <span style="position: absolute; top: 10px; right: 22px;" id="error_add_title" data-bs-dismiss="modal"
                                    class="material-symbols-outlined error1_">

                            </div>

                            <div class="col-sm-6">

                                    <input id="redeem_amount" pattern="[1-9][0-9]*" title="Please enter positive numbers (excluding zero)"  placeholder="Max Redeem Amount" type="text"
                                    required autocomplete="off">
                                    <span style="position: absolute; top: 10px; right: 22px;" id="error_add_title" data-bs-dismiss="modal"
                                    class="material-symbols-outlined error1_">

                            </div> <br> <br>

                          
                    

                         <div  class="col-sm-12">
                            <input id="datePicker" placeholder="Expiry date" required type="text" autocomplete="off">
                        </span>
                     </div>
                           

                  </div>
                 </div>
                  <div style="position: relative;" class="modal-footer">
                      <input type="hidden" id="product_id">
                      <a class="close_btn" data-bs-dismiss="modal" id="close_btn">Close</a>
 
                      <button type="submit" id="edit_product" class="add_btn">Edit</button>
 
                  </div>
              </form>
 
 
          </div>
      </div>
     </div>
 

   <!-- modal for unlist or list  -->

