                        </div>
                    </div>
                </div>

                <div class="container-fluid">
                    <!-- Basic Examples -->
                    <div class="row clearfix">
                        <div class="col-lg-12">
                            <div class="card">
                                <!-- <div class="header">
                                    <h2><strong>Active</strong> Users</h2>
                                </div> -->
                                <div class="body">


                                    <div class="table-responsive">
                                        <table
                                            class="table table-bordered table-striped table-hover js-basic-example dataTable">

                                            <thead>
                                                <tr>
                                                    <th>Coupon&nbsp;Code</th>
                                                    <th>Description</th>
                                                    <th>Discount</th>
                                                    <th>Min&nbsp;Amount</th>
                                                    <th>Redeem&nbsp;Amount</th>
                                                    <th>Added&nbsp;Date</th>
                                                    <th>Expiry&nbsp;Date</th>
                                                    <th>Action (Edit)</th>
                                                    <th>Action (Activate)</th>
                                                    <th>Action (Remove)</th>
                                                    <!-- <th>Status</th> -->
                                                </tr>
                                            </thead>
                                            <tfoot>
                                                <tr>
                                                    <th>Coupon&nbsp;Code</th>
                                                    <th>Description</th>
                                                    <th>Discount</th>
                                                    <th>Min&nbsp;Amount</th>
                                                    <th>Redeem&nbsp;Amount</th>
                                                    <th>Added&nbsp;Date</th>
                                                    <th>Expiry&nbsp;Date</th>
                                                    <th>Action (Edit)</th>
                                                    <th>Action (Activate)</th>
                                                    <th>Action (Remove)</th>
                                                    <!-- <th>Status</th> -->
                                                </tr>
                                            </tfoot>
                                            <tbody id="tableBody_listed">


                                                    <% if(locals.coupons){ %>

                                                        <% locals.coupons.forEach((item)=> { %>

                                                            <tr id="row<%= item._id %>">
                                                                <td><%= item.coupon_code %></td>
                                                                <td><%= item.discription %></td>
                                                                <td><%= item.discount %>%</td>
                                                                <td>Rs <%= item.min_amount %></td>
                                                                <td>Rs <%= item.redeem_amount %></td>
                                                                <td><%= formatDate(item.addedDateTime) %></td>
                                                                <td><%= formatDate(item.expiryDate)  %></td>

                                                                <td class="btn_"><button onclick="editButton(`<%= item._id %>`,`<%= item.coupon_code %>`,`<%= item.discription %>`, `<%= item.discount %>`, `<%= item.min_amount %>`, `<%= item.redeem_amount %>`, `<%= formatDate(item.expiryDate) %>`)"
                                                                     class="edit_">Edit</button></td>

                                                                <% if(item.isActive === true){%>
                                                                    <td class="btn_"><button id="activation_btn<%= item._id %>" onclick="activation(`<%= item._id %>`)" class="unlist_">Deactivate</button></td>
                                                                <% } else{ %>
                                                                    <td class="btn_"><button id="activation_btn<%= item._id %>" onclick="activation(`<%= item._id %>`)" class="list_">Activate</button></td>
                                                                 <% } %>   
                                                                <td class="btn_"><button id="remove_btn<%= item._id %>" onclick="removeCoupon(`<%= item._id %>`,`<%= item.coupon_code %>`)" class="unlist_">Remove</button></td>
                                                                
                                                             
                                                            </tr>

                                                        <% }) %>

                                                    <% } %>    

                                         

                                                    <% function formatDate(dateString) {
                                                        const date = new Date(dateString);
                                                        const options = { day: 'numeric', month: 'long', year: 'numeric' };
                                                        return date.toLocaleDateString('en-GB', options);
                                                    } %>

                                            </tbody>
                                          
                                        </table>
                                    </div>
