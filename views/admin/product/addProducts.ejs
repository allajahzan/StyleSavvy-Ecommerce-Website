    <!-- modal for add varients -->

    <div  style="overflow: auto" class="modal fade" id="varient" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="addCategoriesLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-md"> <!-- Added modal-lg class for large width -->
            <div class="modal-content">
                <form id="add_varient_form" onsubmit="addVarient()">
                    <div class="modal-header">
                        <p style="color: black; font-weight: bold;">Add Varients</p>
                    </div>
                    <div style="margin-left: 24px; margin-right: 24px;" class="image_div row">

                        <div id="crop-container">
                            <img id="crop-image">
                            <button type="button" style="display: none;" id="crop-button">Crop</button>
                        </div>

                            <div class="file-drop col-6 col-md-3 col-lg-3">
                                <input type="file" id="imageInput1" class="file-input" accept="image/*" required>
                                <div id="imagePreview1" class="image-preview"></div>
                                <p style="text-align: center;"  id="para1" class="drop-here">Drag & drop images here</p>
                            </div> 

                            <div class="file-drop col-6 col-md-3 col-lg-3">
                                <input type="file" id="imageInput2" class="file-input" accept="image/*" required >
                                <div id="imagePreview2" class="image-preview"></div>
                                <p style="text-align: center;" id="para2" class="drop-here">Drag & drop images here</p>
                            </div>

                            <div class="file-drop col-6 col-md-3 col-lg-3">
                                <input type="file" id="imageInput3" class="file-input" accept="image/*" required>
                                <div id="imagePreview3" class="image-preview"></div>
                                <p style="text-align: center;"  id="para3" class="drop-here">Drag & drop images here</p>
                            </div>   

                            <div class="file-drop col-6 col-md-3 col-lg-3">
                                <input type="file" id="imageInput4" class="file-input" accept="image/*" required>
                                <div id="imagePreview4" class="image-preview"></div>
                                <p style="text-align: center;"  id="para" class="drop-here">Drag & drop images here</p>
                            </div>   

                            
                    </div>

                    <div style="display: flex; flex-direction: column;" class="modal-body">
                        
                                    <% if(locals.colors.length===0) { %>
                                        <input id="pname" type="text" placeholder="Types are not added" required
                                            readonly />
                                        <% } else { %>
                                            <select style="margin-bottom: 20px;" id="select_color"
                                                class="show-tick ms select2" required>
                                                <option value="" disabled selected hidden>Select a color</option>
                                                <% locals.colors.reverse().forEach((color)=> { %>
                                                    <option value="<%= color._id %>">
                                                        <%= color.color_name %>
                                                    </option>
                                                    <% }); %>
                                            </select>
                                            <% } %>

                                            <input id="sizes_length" type="hidden" value="<%= locals.sizes.length %>">

                                           
                                                <input pattern="[1-9][0-9]*" id="pprice" type="text" placeholder="Price" required
                                                autocomplete="off" />
                                              
                                            <% locals.sizes.forEach((size,index)=>{ %>

                                                <p>Stock<%= index + 1 %></p>
                                                <div class="row clearfix">
                                                    <div class="col-sm-6">
                                                        <input type="hidden" id="size<%= index %>" value="<%= size._id %>" >
                                                        <input  readonly type="text" placeholder="<%= size.size_name %>"
                                                        autocomplete="off" />
                                                    </div>        
                                                    <div class="col-sm-6">

                                                        <input pattern="[1-9][0-9]*" title="Please enter positive numbers (excluding zero)" type="text" placeholder="Stock" 
                                                            autocomplete="off" id="quantity<%= index %>" />
                                                        <span id="error_stock" data-bs-dismiss="modal"
                                                            class="material-symbols-outlined error_"></span>

                                                    </div>
                                                   

                                                </div>

                                            <% }) %>


                    </div>
                    <div style="position: relative;" class="modal-footer">
                        <input type="hidden" id="product_id">
                        <a class="close_btn" data-bs-dismiss="modal" id="close_btn">Close</a>

                        <button type="submit" id="add_varient" class="add_btn">Add</button>

                    </div>
                </form>


            </div>
        </div>
    </div>





