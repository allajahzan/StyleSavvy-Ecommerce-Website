    <!-- modal -->


    
      <!-- modal for edit product -->

      <div class="modal fade" id="varient" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
      aria-labelledby="addCategoriesLabel" aria-hidden="true">
      <div style="max-width: 600px;" class="modal-dialog modal-dialog-centered modal-md"> <!-- Added modal-lg class for large width -->
          <div class="modal-content">
              <form id="edit_product_form" onsubmit="editProducts()">
                  <div class="modal-header">
                     <p style="font-weight: bold;">Edit Product</p>
                 
                  </div>
 
                  <div class="modal-body">

                    <div class="row clearfix">

                        <div  class="col-sm-12">
                            <!-- <label for="pdescription">Description *</label> -->
                            <input id="product_name_edit" placeholder="Product Name" type="text"
                            required autocomplete="off">
                            <span style="position: absolute; top: 10px; right: 22px;" id="error_add" data-bs-dismiss="modal"
                            class="material-symbols-outlined error_">
                        </span>
                     </div>

                     <div  class="col-sm-12">
                        <!-- <label for="pdescription">Description *</label> -->
                        <input id="product_title_edit" placeholder="Title Name" type="text"
                        required autocomplete="off">
                        <span style="position: absolute; top: 10px; right: 22px;" id="error_add_title" data-bs-dismiss="modal"
                        class="material-symbols-outlined error1_">
                    </span>
                 </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                     
                                  <% if(locals.types) {%>
 
                                    <% if(locals.types.length===0) { %>
                                        <input id="ptype" type="text" placeholder="Types are not added"
                                            required readonly />
                                        <% } else { %>
                                            <select id="select_type" class="show-tick ms select2"
                                                data-placeholder="Search and select" required>
                                                <option value="" disabled selected hidden>Select a type
                                                </option>
                                                <% locals.types.reverse().forEach((type)=> { %>
                                                    <option value="<%= type._id %>">
                                                        <%= type.type_name %>
                                                    </option>
                                                    <% }); %>
                                            </select>
                                            <% } %>
                                     <% } %>

                                </div>
                            </div>

                            <div class="col-sm-6">
                                <!-- <div class="form-group"> -->
                                 
                                     <% if(locals.categories){%>
 
                                        <% if(locals.categories.length===0) { %>
                                            <input id="pcategory" type="text"
                                                placeholder="Categories are not added" required readonly />
                                            <% } else { %>

                                                <select style="display: block;" id="select_category" class="show-tick ms select2"
                                                    data-placeholder="Search and select" required>


                                                    <% locals.categories.reverse().forEach((cats)=> { %>
                                                        <option value="<%= cats._id %>">
                                                            <%= cats.category_name %>
                                                        </option>
                                                        <% }); %>

                                                </select>

                                                <% } %>
 
                                         <% } %>
                                        
                                <!-- </div> -->
                            </div> <br> <br>

                            <div  class="col-sm-12">
                                <!-- <label for="pdescription">Description *</label> -->
                                <textarea required id="pdescription" placeholder="Discription" style="width: 100%; padding-left: 10px;" rows="4" cols="50"></textarea>
                            </span>
                         </div>

                         <div  class="col-sm-12">
                            <!-- <label for="pdescription">Description *</label> -->
                            <input id="ptag" placeholder="Tags (Optional)" type="text"
                             autocomplete="off">
                            <span style="position: absolute; top: 10px; right: 22px;" id="error_tag" data-bs-dismiss="modal"
                            class="material-symbols-outlined error_">
                        </span>
                     </div>
                           

                  </div>
                 </div>
                  <div style="position: relative;" class="modal-footer">
                      <input type="hidden" id="product_id">
                      <a class="close_btn" data-bs-dismiss="modal" id="close_btn">Close</a>
 
                      <button type="submit" id="edit_product" class="add_btn">Edit</button>
 
                  </div>
              </form>
 
 
          </div>
      </div>
     </div>
 
 

   <!-- modal for unlist or list  -->

    <div class="modal fade" id="unlist" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="unlistCategoryLabel" aria-hidden="true">
     <div class="modal-dialog modal-dialog-centered">
         <div class="modal-content">
             <div class="modal-body">
                <p>Do you wanna unlist this product&nbsp;<span id="name_" class="type_name"></span></p>
             </div>
             <div class="modal-footer">
                 <button class="close_btn" data-bs-dismiss="modal">No</button>
                 <button id="confirm_btn" data-bs-dismiss="modal" class="button2">Yes</button>
             </div>
         </div>
     </div>
    </div>

        <div class="modal fade" id="message" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropokLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-body">
                 <p id="error_p"></p><span id="error_symbol" class="material-symbols-outlined"></span>
                </div>
                <div class="modal-footer">
                  <!-- <button class="close_btn" data-bs-dismiss="modal">Close</button> -->
                  <button id="ok_btn" data-bs-dismiss="modal" class="button2">OK</button>  
                </div>
              </div>
            </div>
        </div>    



