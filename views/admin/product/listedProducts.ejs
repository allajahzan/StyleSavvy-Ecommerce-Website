        <section class="content">
            <div class="body_scroll">
                <div class="block-header">
                    <div class="row">
                        <div class="col-lg-7 col-md-6 col-sm-12">
                            <h2>Products</h2>
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item">Products</li>
                                <li class="breadcrumb-item active">Products Listed</li>
                            </ul>
                            <button style="z-index: 1;" class="btn btn-primary btn-icon mobile_menu" type="button"><i
                                    class="zmdi zmdi-sort-amount-desc"></i></button>
                        </div>
                    </div>
                </div>

                <div class="container-fluid">
                    <!-- Basic Examples -->
                    <div class="row clearfix">
                        <div class="col-lg-12">
                            <div class="card">
                                <!-- <div class="header">
                                    <h2><strong>Active</strong> Users</h2>
                                </div> -->
                                <div class="body">


                                    <div class="table-responsive">
                                        <table
                                            class="table table-bordered table-striped table-hover js-basic-example dataTable">

                                            <thead>
                                                <tr>
                                                    <th>Product's&nbsp;Image</th>
                                                    <th>Name</th>
                                                    <th>Category</th>
                                                    <th>Tags</th>
                                                    <th>DateTime</th>
                                                    <th>Action (Edit)</th>
                                                    <th>Action (Unlist)</th>
                                                    <th>Status</th>
                                                </tr>
                                            </thead>
                                            <tfoot>
                                                <tr>
                                                    <th>Product's&nbsp;Image</th>
                                                    <th>Name</th>
                                                    <th>Category</th>
                                                    <th>Tags</th>
                                                    <th>DateTime</th>
                                                    <th>Action (Edit)</th>
                                                    <th>Action (Unlist)</th>
                                                    <th>Status</th>
                                                </tr>
                                            </tfoot>
                                            <tbody id="tableBody_listed">

                                                <% locals.products.reverse().forEach((p)=>{ %>

                                                    <tr id="row<%= p._id %>" >

                                                        <td class="image_" style="cursor: pointer;"  onclick="getProductDetails('<%= p._id %>')">
                                                            <img id="p_image_td<%= p._id %>" src="/products/uploads/<%= p.varients[0].images[0]%>" alt="">
                                                        </td>

                                                        <td id="p_name_td<%= p._id %>">
                                                            <%= p.product_name %>
                                                        </td>
                                                      
                                                        <td id="p_stock_details<%= p._id %>">
                                                            <%= p.type.type_name %>,
                                                            <%= p.category.category_name %>
                                                        </td>

                                                        <td id="p_tags<%= p._id %>">
                                                            <% if(p.tags){%>
                                                                <%= p.tags %>
                                                            <% }else{ %>
                                                                <a style="color: rgb(156, 155, 155);">No Tags</a>
                                                            <% } %>
                                                        </td>
                                                
                                                        <td id="date_time<%= p._id %>" class="p_date_td">
                                                            <%= formatDate(p.addedDateTime) + ' ' +
                                                                p.addedDateTime.toLocaleTimeString() %>
                                                        </td>
                                                      
                                                        <td class="btn_">
                                                            <button 
                                                                onclick="getDataForEdit('<%= p._id%>')"
                                                                class="edit_">Edit</button>
                                                        </td>
                                                        <td class="btn_">
                                                            <button id="unlist_cat" data-bs-toggle="modal"
                                                                data-bs-target="#unlist"
                                                                onclick="getDataToUnlist('<%= p._id %>','<%= p.product_name %>')"
                                                                class="unlist_">Unlist</button>
                                                        </td>
                                                        <td class="listed listed_">Listed</td>

                                                    </tr>

                                                    <% }) %>

                                                    <% function formatDate(dateString) {
                                                        const date = new Date(dateString);
                                                        const options = { day: 'numeric', month: 'long', year: 'numeric' };
                                                        return date.toLocaleDateString('en-GB', options);
                                                    } %>

                                            </tbody>
                                          
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

