<!doctype html>
<html class="no-js " lang="en">


<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta name="description" content="Responsive Bootstrap 4 and web Application ui kit.">

    <title>StyleSavvy-Admin</title>


    <!-- google icons -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

    <link rel="stylesheet" href="/assets1/plugins/bootstrap/css/bootstrap.min.css">
    <!-- JQuery DataTable Css -->
    <link rel="stylesheet" href="/assets1/plugins/jquery-datatable/dataTables.bootstrap4.min.css">
    <!-- Custom Css -->
    <link rel="stylesheet" href="/assets1/css/style.min.css">

    <link rel="stylesheet" href="/assets1/css/myStyle.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">


</head>

<body class="theme-blush" onload="loadProducts()">

    <!-- Page Loader -->
    <section id="loading">
        <div class="loader"></div>
        <p>Loading</p>
    </section>

    <!-- Left Sidebar -->
    <section id="products">
        <aside id="leftsidebar" class="sidebar">
            <div class="navbar-brand">
                <button class="btn-menu ls-toggle-btn" type="button"><i class="zmdi zmdi-menu"></i></button>
                <a href="/admin/dashboard"><span class="m-l-10">StyleSavvy</span></a>
            </div>
            <div class="menu">
                <ul class="list">
                    <li>
                        <div class="user-info">
                            <a class="image" href="/admin/dashboard"><img src="/assets1/images/admin.jpeg"
                                    alt="User"></a>
                            <div class="detail">
                                <h4>
                                    <%= locals.admin%>
                                </h4>
                                <p>Admin</p>
                            </div>
                        </div>
                    </li>
                    <li><a href="dashboard" class="dashboard"><i class="zmdi zmdi-home"></i><span>Dashboard</span></a>
                    </li>

                    <li> <a href="javascript:void(0);" class="menu-toggle"><i
                                class="zmdi zmdi-account"></i><span>Users</span></a>
                        <ul class="ml-menu">
                            <li><a href="activeUsers">Active Users</a></li>
                            <li><a href="blockedUsers">Blocked Users</a></li>
                        </ul>
                    </li>

                    <li> <a href="orders" ><i class="zmdi zmdi-shopping-basket"></i><span>Orders</span></a></li>
                    <!-- <li> <a href="javascript:void(0);"><i class="zmdi zmdi-refresh"></i><span>returns</span></a></li> -->

                    <% if(locals.varient){%>

                        <% if(locals.varient.product.isListed===true) {%>

                            <li class="active"><a href="javascript:void(0);" class="menu-toggle"><i
                                        class="zmdi zmdi-shopping-cart"></i><span class="product">Products</span></a>
                                <ul class="ml-menu">
                                    <li><a href="/admin/addProducts">Products Add</a></li>
                                    <li><a class="listed_products" href="/admin/listedProducts">Products Listed</a></li>
                                    <li><a href="/admin/unlistedProducts">Products Unlisted</a></li>
                                </ul>
                            </li>

                            <% } else{%>

                                <li class="active"><a href="javascript:void(0);" class="menu-toggle"><i
                                            class="zmdi zmdi-shopping-cart"></i><span
                                            class="product">Products</span></a>
                                    <ul class="ml-menu">
                                        <li><a href="/admin/addProducts">Products Add</a></li>
                                        <li><a href="/admin/listedProducts">Products Listed</a></li>
                                        <li><a class="unlisted_products" href="/admin/unlistedProducts">Products
                                                Unlisted</a></li>
                                    </ul>
                                </li>

                                <% } %>
                                    <% } %>

                                        <li><a href="javascript:void(0);" class="menu-toggle"><i
                                                    class="zmdi zmdi-card-giftcard"></i><span>Coupons</span></a>
                                            <ul class="ml-menu">
                                                <li><a  href="addCoupons">Coupons Add</a></li>
                                                <li><a  href="listsCoupons">Coupons Lists</a></li>    
                                            </ul>
                                        </li>
                                        <li><a href="javascript:void(0);" class="menu-toggle"><i class="fas fa-percentage"></i><span>Offers</span></a>
                                            <ul class="ml-menu">
                                                <li><a href="addOffers" >Offers Add</a></li>
                                                <li><a href="listsOffers" >Offers Lists</a></li>
                                            </ul>
                                        </li>
                                        <li><a href="javascript:void(0);" class="menu-toggle"><i
                                                    class="zmdi zmdi-male-female"></i>
                                                <span>Types</span></a>
                                            <ul class="ml-menu">
                                                <li><a href="listedTypes">Types Listed</a></li>
                                                <li><a href="unlistedTypes">Types Unlisted</a></li>
                                            </ul>
                                        </li>

                                        <li><a href="javascript:void(0);" class="menu-toggle"><i
                                                    class="zmdi zmdi-folder"></i>
                                                <span>Categories</span></a>
                                            <ul class="ml-menu">
                                                <li><a href="listedCategories">Categories Listed</a></li>
                                                <li><a href="unlistedCategories">Categories Unlisted</a></li>
                                            </ul>
                                        </li>

                                        <li><a href="javascript:void(0);" class="menu-toggle"><i
                                                    class="zmdi zmdi-crop"></i>
                                                <span>Size</span></a>
                                            <ul class="ml-menu">
                                                <li><a href="listedSizes">Size Listed</a></li>
                                                <li><a href="unlistedSizes">Size Unlisted</a></li>
                                            </ul>
                                        </li>

                                        <li><a href="javascript:void(0);" class="menu-toggle"><i
                                                    class="zmdi zmdi-palette"></i>
                                                <span>Colors</span></a>
                                            <ul class="ml-menu">
                                                <li><a href="listedColors">Colors Listed</a></li>
                                                <li><a href="UnlistedColors">Colors Unlisted</a></li>
                                            </ul>
                                        </li>
                                        <li><a href="/admin/salesReports" ><i class="zmdi zmdi-trending-up"></i><span>Sales Report</span></a></li>   
                                        <li><a href="/admin/logout" ><i class="zmdi zmdi-power"></i><span>Sign-Out</span></a></li>  


                </ul>
            </div>
        </aside>

        <section class="content">
            <div class="body_scroll">
                <div class="block-header">
                    <div class="row">
                        <div class="col-lg-7 col-md-6 col-sm-12">
                            <h2>Products</h2>
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item">Products</li>

                                <li class="breadcrumb-item active">Product Details</li>
                                <li class="breadcrumb-item active">Listed Varients</li>
                                <li class="breadcrumb-item active">Stocks Management</li>
                            </ul>
                            <button style="z-index: 1;" class="btn btn-primary btn-icon mobile_menu" type="button"><i
                                    class="zmdi zmdi-sort-amount-desc"></i></button>
                        </div>
                    </div>
                </div>

                <div class="container-fluid">
                    <!-- Basic Examples -->
                    <div class="row clearfix">
                        <div class="col-lg-12">
                            <div class="card">
                                <!-- <div class="header">
                                    <h2><strong>Active</strong> Users</h2>
                                </div> -->
                                <div class="body">
                                    <% if(locals.varient) {%>
                                        <div style="position: relative; top: 0px;" class="row">

                                            <div class="container-fluid">


                                                <img id="image_with_color" style="height: 280px; width: 200px;"
                                                    src="/products/uploads/<%= locals.varient.images[0] %>" alt="">

                                                <h4>
                                                    <%= locals.varient.product.product_name %> ( <%=
                                                            locals.varient.color.color_name %> )
                                                </h4>

                                              
                                                    <% if(locals.varient.product.isListed===true){ %>
                                                        <p style='color: green; font-weight:bold;'>Listed Product</p>
                                                        <% }else{%>
                                                            <p style='color: red; font-weight:bold;'>Unlisted Product
                                                            </p>
                                                            <% } %>
                                                  <div style=" display: flex; justify-content: space-between;">
                                                <div>            
                                                                <p>
                                                                    <%= locals.varient.product.type.type_name %>, <%=
                                                                            locals.varient.product.category.category_name
                                                                            %>
                                                                            , <%= locals.varient.color.color_name %>
                                                                </p>
                                                </div>

                                                <div>
                                                   <% if(locals.size.length > locals.stock.length){%>

                                                    <button onclick="addStockModal('<%= locals.varient._id%>')"
                                                        class="add_varient">Add</button>
                                                    <% } %>    

                                                    <button onclick="getDataForEdit('<%= locals.varient._id%>')"
                                                        class="edit_stock">Edit</button>
                                                </div>
                                            </div>

                                        </div>



                                </div>





                                <% } else{ %>

                                    <h4 style="margin-top: 0px;">No product and varients found!</h4>

                                    <% } %>

                                    <br>



                                        <div class="table-responsive">
                                            <table
                                                class="table table-bordered table-striped table-hover js-basic-example dataTable">

                                                <thead>
                                                    <tr>

                                                        <th>Size</th>
                                                        <th>Quantity</th>
                                                        <th>Price</th>


                                                    </tr>
                                                </thead>
                                                <tfoot>
                                                    <tr>

                                                        <th>Size</th>
                                                        <th>Quantity</th>
                                                        <th>Price</th>

                                                    </tr>
                                                </tfoot>
                                                <tbody id="tableBody_listed">


                                                <% if(locals.varient) {%>
                                                    <% locals.stock.reverse().forEach(stock=> { %>

                                                        <tr id="row_stock">


                                                            <td id="size_td<%= stock.no %>">
                                                                <%= stock.size.size_name %>
                                                            </td>

                                                            <td id="quantity_td<%= stock.no %>">
                                                                <%= stock.stock %>
                                                            </td>

                                                            <td id="price_td<%= stock.no %>">
                                                                ₹&nbsp;<%= stock.price %>
                                                            </td>



                                                        </tr>


                                                        <% }); %>

                                                <% } %>

                                                </tbody>

                                            </table>
                                        </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>

            </div>
        </section>
    </section>

    <!-- modal for add new stocks -->

    <div style="overflow: auto" class="modal fade" id="add" data-bs-backdrop="static" data-bs-keyboard="false"
        tabindex="-1" aria-labelledby="addCategoriesLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-md"> <!-- Added modal-lg class for large width -->
            <div class="modal-content">
                <!-- <div class="modal-header">
                    <p style="color: black; font-weight: bold;">Add Varients</p>
                </div> -->
                <form id="add_stock" onsubmit="addStock()">

                    <div style="display: flex; flex-direction: column;" class="modal-body">

                        <% if(locals.varient) {%>

                            <input id="sizes_length1" type="hidden" value="<%= locals.size.length %>">

                            <% locals.size.forEach((size, index) => { %>
                                <% if (!locals.stock.some(stockItem => stockItem.size.size_name === size.size_name)) { %>
                                    <p>Stock <%= index + 1 %></p>
                                    <div class="row clearfix">
                                        <div class="col-sm-6">
                                            <input disabled type="hidden" id="size1<%= index %>" value="<%= size._id %>">
                                            <input readonly type="text" placeholder="<%= size.size_name %>" autocomplete="off" />
                                        </div>
                                        <div class="col-sm-6">
                                            <input pattern="[1-9][0-9]*" title="Please enter positive numbers" type="text"
                                                placeholder="Stock" autocomplete="off" id="quantity1<%= index %>" />
                                            <span id="error_stock" data-bs-dismiss="modal" class="material-symbols-outlined error_"></span>
                                        </div>
                                        <!-- <div class="col-sm-4"> -->
                                            <input pattern="[1-9][0-9]*" title="Please enter positive numbers (excluding zero)" type="hidden"
                                                placeholder="Price" value="<%= locals.varient.actualPrice %>" autocomplete="off" id="price1<%= index %>" />
                                            <!-- <span id="error_price" data-bs-dismiss="modal" class="material-symbols-outlined error_"></span> -->
                                        <!-- </div> -->
                                    </div>
                                <% }else{ %>
                                     <input type="hidden" class="present" value="<%= index %>">
                                    <% } %>
                            <% }) %>

                        <% } %>    
                            
                            

                    </div>
                    <div style="position: relative;" class="modal-footer">
                        <input type="hidden" id="varient_id1">
                        <a class="close_btn" data-bs-dismiss="modal" id="close_btn1">Close</a>

                        <button type="submit" id="add_stock" class="add_btn">Add</button>

                    </div>
                </form>


            </div>
        </div>
    </div>



    <!-- modal for edit stock -->

    <div style="overflow: auto" class="modal fade" id="edit" data-bs-backdrop="static" data-bs-keyboard="false"
        tabindex="-1" aria-labelledby="addCategoriesLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-md"> <!-- Added modal-lg class for large width -->
            <div class="modal-content">
                <!-- <div class="modal-header">
                    <p style="color: black; font-weight: bold;">Add Varients</p>
                </div> -->
                <form id="add_varient_form" onsubmit="editStock()">

                    <div style="display: flex; flex-direction: column;" class="modal-body">

                        <% if(locals.varient) {%>

                            <input id="sizes_length" type="hidden" value="<%= locals.stock.length %>">

                            <% locals.stock.reverse().forEach((stock,index)=>{ %>

                                <p>Stock<%= index+1 %>
                                </p>
                                <div class="row clearfix">
                                    <div class="col-sm-6">
                                        <input disabled type="hidden" id="size<%= index %>" value="<%= stock.size._id %>">
                                        <input readonly type="text" placeholder="<%= stock.size.size_name %>"
                                            autocomplete="off" />
                                    </div>
                                    <div class="col-sm-6">

                                        <input pattern="[0-9]*"
                                            title="Please enter positive numbers (excluding zero)" type="text" value="<%= stock.stock %>" 
                                            placeholder="Stock" required autocomplete="off" id="quantity<%= index %>" />
                                        <span id="error_stock" data-bs-dismiss="modal"
                                            class="material-symbols-outlined error_"></span>

                                    </div>
                                    <!-- <div class="col-sm-4"> -->

                                        <input pattern="[1-9][0-9]*"
                                            title="Please enter positive numbers (excluding zero)" type="hidden"  value="<%= stock.price %>"
                                            placeholder="Price" required autocomplete="off" id="price<%= index %>" />
                                     

                                    <!-- </div> -->

                                </div>

                                <% }) %>
                                    <% } %>


                    </div>
                    <div style="position: relative;" class="modal-footer">
                        <input type="hidden" id="varient_id">
                        <a class="close_btn" data-bs-dismiss="modal" id="close_btn">Close</a>

                        <button type="submit" id="edit_stock" class="add_btn">Edit</button>

                    </div>
                </form>


            </div>
        </div>
    </div>




    <!-- modal for error -->

    <div class="modal fade" id="message" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="typeUnlistSuccessLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">
                    <p id="error_p"></p><span id="error_symbol"
                        class="material-symbols-outlined">error</span>
                </div>
                <div class="modal-footer">
                    <!-- <button class="close_btn" data-bs-dismiss="modal">Close</button> -->
                    <button data-bs-dismiss="modal" id="ok_btn" class="button2">OK</button>
                </div>
            </div>
        </div>
    </div>



    <!-- Jquery Core Js -->
    <script src="/assets1/js/pages/api/product/stocks.js"></script>
    <script src="/assets1/bundles/libscripts.bundle.js"></script> <!-- Lib Scripts Plugin Js -->
    <script src="/assets1/bundles/vendorscripts.bundle.js"></script> <!-- Lib Scripts Plugin Js -->

    <!-- Jquery DataTable Plugin Js -->
    <script src="/assets1/bundles/datatablescripts.bundle.js"></script>
    <script src="/assets1/plugins/jquery-datatable/buttons/dataTables.buttons.min.js"></script>
    <script src="/assets1/plugins/jquery-datatable/buttons/buttons.bootstrap4.min.js"></script>
    <script src="/assets1/plugins/jquery-datatable/buttons/buttons.colVis.min.js"></script>
    <script src="/assets1/plugins/jquery-datatable/buttons/buttons.flash.min.js"></script>
    <script src="/assets1/plugins/jquery-datatable/buttons/buttons.html5.min.js"></script>
    <script src="/assets1/plugins/jquery-datatable/buttons/buttons.print.min.js"></script>

    <script src="/assets1/bundles/mainscripts.bundle.js"></script><!-- Custom Js -->
    <script src="/assets1/js/pages/tables/jquery-datatable.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>


</html>