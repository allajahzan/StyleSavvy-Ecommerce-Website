                                    <div id="<%= item._id %>">
                                        <div class="row order_items">
                                         
                                        
                                        <form id="wishlist_details<%= item._id %>" >
                                            <input type="hidden" value="<%= item._id %>">
                                            <input type="hidden" value="<%= index %>">
                                            
                                        </form> 
                                      
                                        <div class="col-2 col-sm-1 col-md-1 img-div">
                                            <img width="100px" src="/products/uploads/<%= item.image %>" alt="">                                                         
                                        </div>
            
                                        <div class="col-10 col-sm-8 col-md-5">
                                    
            
                                            <p style="font-weight: 500; color: black; overflow: hidden;
                                            text-overflow: ellipsis;
                                            white-space: nowrap;
                                            width: 100%;">
                                                <%= item.product_name %>
                                             </p>
                                        <p style="font-size: 14px; margin-bottom: 0px; overflow: hidden;
                                        text-overflow: ellipsis;
                                        white-space: nowrap;
                                        width: 100%;" class="category">
                                          <%= item.type %> > <%= item.category %> > <%= item.color %> > <span style="color: #bf8040;"><%= item.size %></span>
                                        </p>
            
                                         <h5 style="margin-bottom: 15px;">₹ <%= item.price %> 
                                         </h5>  
                                   
                                        </div>

                                        <div style="display: flex; justify-content: start;padding-left: 0px;" class="col-sm-12 col-md-3">
                                            <% if(item.stock===0){ %>
                                                <p style="font-weight: 500; color: rgb(210, 47, 47); margin-bottom: 10px;">Out of stock</p>
                                            <% }else if(item.stock<=5){ %>
                                                <p style="font-weight: 500; color: rgb(210, 47, 47);  margin-bottom: 10px;">Only <%= item.stock %> stocks left</p>
                                            <% } else{ %>
                                                <p style="font-weight: 500; color: green;  margin-bottom: 10px;">In stock</p>
                                             <% } %>   
                                        </div>

                                        <div style="padding-left: 0px; padding-right: 0px;"  class="col-sm-12 col-md-3">
                                            <% if(item.stock===0){ %>
                                                
                                              <div style="display: flex; justify-content: space-between;">
                                                <p style="color: lightgray; font-weight: 500; cursor: pointer;"><span style="color:lightgray; position: relative; top: 4px; font-size: 18px; margin-right: 5px;" class="material-symbols-outlined">
                                                    add_shopping_cart
                                                    </span>Add to cart</p>

                                                    <p onclick="removeFromWishList('<%= item.varientId %>','<%= item.sizeId %>','<%= item._id %>')" style="cursor: pointer;color: grey; font-weight: 500; padding-right: 0px;"> <span style="color:grey; position: relative; top: 4px; font-size: 18px; margin-right: 5px;" class="material-symbols-outlined">
                                                        delete
                                                        </span>Remove</p>
                                                        </div>
                                            <% }else { %>

                                              <div style="display: flex; justify-content: space-between;">
                                                <p onclick="addToCart('<%= item.varientId %>','<%= item.sizeId %>','<%= item.price %>')"  style="color: #c96; font-weight: 500; cursor: pointer;"><span style="color:#c96; position: relative; top: 4px; font-size: 18px; margin-right: 5px;" class="material-symbols-outlined">
                                                    add_shopping_cart
                                                    </span>Add to cart</p>

                                                    <p  onclick="removeFromWishList('<%= item.varientId %>','<%= item.sizeId %>','<%= item._id %>')" style="cursor: pointer;color: grey; font-weight: 500;  padding-right: 0px;"> <span style="color:grey; position: relative; top: 4px; font-size: 18px; margin-right: 5px;" class="material-symbols-outlined">
                                                        delete
                                                        </span>Remove</p>
                                              </div>
                                             <% } %>   
                                        </div>

                                        
                                          
                                   
                                       
                                       
                                     </div>
                                    
                                </div>
      
                               <% }); %>

                    
                    </div>

                    
                  



                    </div>
                    </div>
    
                    

