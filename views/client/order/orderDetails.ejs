                                                  const invoiceDetails = {
                                                    sellerInfo: 'StyleSavvy PRIVATE LIMITED,\n5th Floor, Kakncheri,\ Malappuram, Kerala, 673634\nGSTIN: 06AADCG1316B2ZY',
                                                    orderInfo: {
